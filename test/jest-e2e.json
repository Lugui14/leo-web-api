{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../src/",
    "globalSetup": "../test/setup-tests.ts",
    "globalTeardown": "../test/teardown-tests.ts",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "@/(.*)": "<rootDir>/$1"
    }
}
